.user
  %ul.nav.nav-pills
    %li
      %a{role: "presentation", href: "/home"}
        %span
          Home
    %li
      %a{role: "presentation", href: "/curriculums"}
        %span
          Curriculum
    %li
      %a{role: "presentation", href: "/curriculum_labels"}
        %span
